
<h2>Enroll in the Diner Dollars Program <br />for your Favorite Participating Restaurants</h2>
<h3>FREE</h3>
<h2>PARTICIPATING RESTAURANTS</h2>

<br />
  <table class="table table-striped table-bordered">
    <tr class="info">
      <th>Restaurant</th>
      <th>Type</th>
      <th>Location</th>
      <th><label class="checkbox" value="enrollment">Enroll ?</label></th>
    </tr>
    <% @shops.each do |shop| %>
    <tr class="info">
      <td>@shop.name</td>
      <td>@shop.kind</td>
      <td>@shop.location</td>
      <td><label class="checkbox" value="enrollment">Enroll ?</label></td>
    </tr>
    <% end %>
  </table>
