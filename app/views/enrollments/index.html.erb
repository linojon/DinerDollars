

<div class="container">
  <h2>My Dedicated Diner Dollars Review</h2>
  <br />

  <table class="table table-striped table-bordered">
    <tr class="success">
      <th>Restaurant</th>
      <th>Points</th>
      <th>Diner $ Available</th>
      <th>Points Needed to Next $</th>
    </tr>
  
    <% @enrollments.each do |enrollment| %>
      <tr>
        <td><%= enrollment.shop.name %></td>
        <td><%= enrollment.points %></td>
      </tr>
    <% end %>
  </table>

  <h2>Shops</h2>
  <!-- this could be moved somewhere else, or into the above table? -->
  <table class="table table-striped table-bordered">
    <thead>
      <th>Restaurant</th>
      <th>Enrolled</th>
    </thead>
    <tbody>
      <% @all_shops.each do |shop| %>
        <tr>
          <td><%= shop.name %></td>
          <td>
            <% if current_user.shops.include? shop %>
              ENROLLED
            <% else %>
              <%= link_to "Enroll", customer_enrollments_path(current_user, shop_id: shop.id), method: :post, class: 'btn btn-primary' %>
            <% end %>
      <% end %>
    </tbody>

  </table>

</div>
