<h1>Participating Restaurants</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Kind</th>
      <th>Location</th>
      <th>Enrolled?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.name %></td>
        <td><%= shop.kind %></td>
        <td><%= shop.location %></td> 
          <% if has_enrollment? %>  
        <td><%= link_to 'Enrolled', edit_enrollment_path(shop) %></td>
          <% else link_to 'Sign Up', edit_enrollment_path(shop) %>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shop', new_shop_path %>
